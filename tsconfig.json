{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist/",
    "declaration": true,
    "declarationDir": "typings/",
    "sourceMap": true
  },
  "typedocOptions": {
    "out": "docs",
    "exclude": "**/{test,node_modules,dist}/**/*.ts",
    "externalPattern": "**/node_modules/**",
    "excludeExternals": true,
  },
  "include": [
    "./src/**/*.ts"
  ]
}